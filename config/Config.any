#--- ActionsModule configuration --------------------------------------
	/Actions {					# aliases for Actions
		/MyFormAction			{	MyForm			}
		/MyCheckFormAction		{					}
		/MyConfirmationAction	{	ConfirmationForm	}
		/DoSomething			{	MyDoSomething	}
