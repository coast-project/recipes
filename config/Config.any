	}

#--- AppLogModule configuration --------------------------------------

	/AppLogModule {
		#! Where the logfiles are kept
		/LogDir		!Defaults.any?LogDir
		#! When to rotate the logifles in hour:minute
		/RotateTime	"23:59"
		/Servers {
			/Server	{
				/AccessLog {
					/FileName	"Access.log"
					/Format		{ /Lookup AccessLogFormat }
					/Header {
						"client "
						"- "
						"date "
						"protocol "
						"\"req-method "
						"request\" "
						"protocolstring "
						"role"
					}
				}
#				/ErrorLog {
#					/FileName	"Error.log"
#					/Format		{ /Lookup AccessLogFormat }
#					/Header {
#						"client "
#						"- "
#						"date "
#						"req-method "
#						"\"request\" "
#						"server-protocol "
#						"role"
#					}
#				}
			}
		}
	}

	/AccessLogFormat {
		{ /Lookup	{ header.REMOTE_ADDR "-" } }
		" - "
		"["
		{ /DateRenderer { /Format "%a, %m-%d-%Y %T" /DeltaGMT 1 }  }
		"] "
		"http"
		{ /Condition {
			/ContextCondition { header.HTTPS }
			/True 	"s"
		} }
		" \""
		{ /Lookup REQUEST_METHOD }
		" "
		{ /Lookup REQUEST_URI }
		"\" "
		{ /Lookup SERVER_PROTOCOL }
		" "
		{ /Lookup { RoleName "-" } }
	}
}
